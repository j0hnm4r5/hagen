{
  "name": "hagen",
  "version": "1.0.0",
  "description": "A colorful logger for JS in Node and in the Browser",
  "keywords": ["log", "logger", "logging", "node", "browser", "colorful", "color", "colors"]
  "main": "hagen.js",
  "repository": "https://github.com/github:j0hnm4r5/hagen",
  "author": "John Mars <john@M4R5.io> (http://M4R5.io)",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "chalk": "^2.4.1"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "prettier": "^1.12.1",
    "xo": "^0.21.0"
  },
  "prettier": {
		"printWidth": 92,
		"tabWidth": 4,
		"useTabs": true,
		"semicolons": true,
		"singleQuote": false,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"arrowParens": "always"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "current",
						"browsers": "Chrome >= 65"
					}
				}
			]
		]
	},
	"xo": {
		"rules": {
			"import/newline-after-import": "off",
			"import/order": "off",
			"import/first": "off",
			"prefer-template": "warn",
			"no-shadow": "error",
			"no-warning-comments": "off",
			"guard-for-in": "error",
			"import/no-unassigned-import": "off",
			"camelcase": [
				"error",
				{
					"properties": "never"
				}
			]
		},
		"prettier": true,
		"envs": [
			"browser",
			"node"
		],
		"globals": [
			"_"
		]
	}
}
